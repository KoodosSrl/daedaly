<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_test_api_connection_form" model="ir.ui.view">
        <field name="name">test.api.connection.form</field>
        <field name="model">daedaly.test_api_connection</field>
        <field name="arch" type="xml">
            <form string="Test GPT API Connection">
                <group>
                    <field name="test_result" nolabel="1"/>
                </group>
                <footer>
                    <button name="test_connection" string="Test Again" type="object" class="btn-primary o_button_daedaly"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_test_api_connection" model="ir.actions.act_window">
        <field name="name">Test GPT API Connection</field>
        <field name="res_model">daedaly.test_api_connection</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_daedaly_root" name="Daedaly" parent="base.menu_config" sequence="99" groups="base.group_system"/>
    <menuitem id="menu_test_api_connection"
              name="Test GPT API Connection"
              parent="menu_daedaly_root"
              action="action_test_api_connection"
              sequence="10"
              groups="base.group_system"/>
</odoo>
