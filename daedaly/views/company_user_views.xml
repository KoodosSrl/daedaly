<odoo>
  <record id="daedaly_view_res_company_form_inherit" model="ir.ui.view">
    <field name="name">res.company.form.inherit.daedaly</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group[./field[@name='color']]" position="after">
        <group>
          <field name="progett_ai_description_file" filename="progett_ai_description_filename"/>
        </group>
      </xpath>
    </field>
  </record>

  <record id="daedaly_view_hr_employee_form_inherit" model="ir.ui.view">
    <field name="name">hr.employee.form.inherit.daedaly</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Profilo AI">
          <group>
            <field name="progett_ai_description" placeholder="Inserisci una descrizione strutturata del dipendente per supportare l'AI"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
